@model IEnumerable<TaskManager.Models.TaskUnit>

@{ ViewData["Title"] = "task manager"; }


<div class="container-fluid">
    <div class="row row-cols-5">
        @foreach (var item in Model)
        {
<div class="card col" style="max-width: 18rem;min-width:10rem ;min-height:18rem;">
    <div class="card-header d-flex justify-content-between">
        @Html.DisplayFor(modelItem => item.Name)

        <div class="card-subtitle mb-2 text-muted d-flex">
            @Html.DisplayFor(modelItem => item.tag)
        </div>
    </div>
    <div class="card-text">
        @Html.DisplayFor(modelItem => item.Content)
    </div>

  
    <div class="div-footer options-container d-flex flex-row justify-content-between">
        <div class="options p-2 ">
            <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill" fill="black"></i></a>
            <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-zoom-in" fill="black"></i></a>
            <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill" fill="black"></i></a>
        </div>
        <div class="time-created p-2 ">
            @Html.DisplayFor(modelItem => item.TimeCreated)
        </div>
    </div>
</div>
        }
    </div>
</div>


