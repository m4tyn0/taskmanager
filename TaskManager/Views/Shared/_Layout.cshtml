<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="header d-flex-inline">
        <nav class="navbar  mb-3 d-flex">
            

                <a class="navbar-brand p-2" asp-area="" asp-controller="TaskManager" asp-action="Index">task manager</a>
                <a class="add-task p-2" asp-area="" asp-controller="TaskManager" asp-action="Create">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"  class="bi bi-plus-square" viewBox="0 0 16 16">
                 <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                 <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>  </a>
                <div class="sort d-flex ml-auto align-self-end"><div class="h6 sort">display by:</div>
                    <div class="h6 sort "> @Html.ActionLink("name", "Index", new { sortOrder = ViewBag.NameSortParm })</div>
                    <div class="h6 sort ">@Html.ActionLink("time created", "Index", new { sortOrder = ViewBag.DateSortParm })</div>
                </div>

             
            </div>
        </nav>
    </header>
    
        <main role="main" >
            @RenderBody()
        </main>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - taskmanager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
